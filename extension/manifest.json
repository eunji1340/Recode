{
    "name": "Recode",
    "description": "함께 공유하는 알고리즘 오답노트",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Recode",
        "default_icon": "images/logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.acmicpc.net/*"
            ],
            "js": [
                "scripts/baekjoon.js"
            ],
            "run_at": "document_idle"
        },
          {
             "matches": ["http://localhost:8080/*"], 
              "js": ["scripts/recode.js"],                
             "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "permissions": [
        "cookies",
        "storage",
        "tabs",
        "https://www.acmicpc.net/"
    ],
    "host_permissions": [
        "https://www.acmicpc.net/*",
        "http://localhost:8080/*"
    ]
}